<idea-plugin>
    <id>com.xiaxiayige.fluter_assets_sync</id>
    <name>FlutterAssetSync</name>
    <vendor email="xiaxiayige@yourcompany.com" url="https://github.com/xiaxiayige/FlutterAssetSync">xiaxiayige</vendor>

    <description><![CDATA[
    Flutter Assets Image Sync, Automatic generated r.dart file ,reference image resource file .(Same as Android R.class)</br>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.xiaxiayige.help.FlutterAssetsSync" class="com.xiaxiayige.help.FlutterAssetsSync"
                text="FlutterAssetSync" description="auto import images file to assets folder ,and Automatic generated r.dart file (Same as Android R.class)">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>